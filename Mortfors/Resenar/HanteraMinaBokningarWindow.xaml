<Window x:Class="Mortfors.Resenar.HanteraMinaBokningarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mortfors.Resenar"
        mc:Ignorable="d"
        Closing="HanteraMinaBokningarWindow_Closing"
        Title="HanteraMinaBokningarWindow" Height="375" Width="595">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="328" Margin="10,10,0,0" VerticalAlignment="Top" Width="569">
            <Label x:Name="l_titel" Content="Bokningar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="261"/>
            <Label x:Name="l_visar" Content="Visar 0 - 10 av 545" HorizontalAlignment="Left" Margin="99,-6,0,0" VerticalAlignment="Top" Width="203" HorizontalContentAlignment="Right"/>
            <Button x:Name="b_nasta" Content="Nästa 10 -&gt;" HorizontalAlignment="Left" Margin="391,1,0,0" VerticalAlignment="Top" Width="85" Click="b_nasta_Click"/>
            <Button x:Name="b_forra" Content="&lt;- Förra 10" HorizontalAlignment="Left" Margin="302,0,0,0" VerticalAlignment="Top" Width="84" Click="b_forra_Click"/>
            <Button x:Name="b_uppdatera" Content="Uppdatera" HorizontalAlignment="Left" Margin="481,0,0,0" VerticalAlignment="Top" Width="83" Click="b_uppdatera_Click"/>
            <ListView x:Name="lv_lista" SelectionMode="Single" HorizontalAlignment="Left" Height="267" VerticalAlignment="Top" Width="564" Margin="0,26,0,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Bussresa ID" Width="80" DisplayMemberBinding="{Binding bussresa.bussresa_id}" />
                        <GridViewColumn Header="Avg. Adress" Width="80" DisplayMemberBinding="{Binding bussresa.avgangs_adress}" />
                        <GridViewColumn Header="Avg. Stad" Width="80" DisplayMemberBinding="{Binding bussresa.avgangs_stad}" />
                        <GridViewColumn Header="Avg. Land" Width="80" DisplayMemberBinding="{Binding bussresa.avgangs_land}" />
                        <GridViewColumn Header="Avg. Datum/Tid" Width="80" DisplayMemberBinding="{Binding bussresa.avgangs_datum}" />
                        <GridViewColumn Header="Antal Platser" Width="130" DisplayMemberBinding="{Binding antal_platser}" />
                        <GridViewColumn Header="Ank. Adress" Width="80" DisplayMemberBinding="{Binding bussresa.ankomst_adress}" />
                        <GridViewColumn Header="Ank. Stad" Width="80" DisplayMemberBinding="{Binding bussresa.ankomst_stad}" />
                        <GridViewColumn Header="Ank. Land" Width="80" DisplayMemberBinding="{Binding bussresa.ankomst_land}" />
                        <GridViewColumn Header="Ank. Datum/Tid" Width="80" DisplayMemberBinding="{Binding bussresa.ankomst_datum}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <Label x:Name="l_resenar" Content="Resenär:" HorizontalAlignment="Left" Margin="0,296,0,0" VerticalAlignment="Top"/>
            <Button x:Name="b_tabortmarkerad" Content="Ta Bort Markerad" HorizontalAlignment="Left" Margin="54,299,0,0" VerticalAlignment="Top" Width="115" Click="b_tabortmarkerad_Click"/>
        </Grid>
    </Grid>
</Window>
