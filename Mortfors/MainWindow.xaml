<Window x:Class="Mortfors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mortfors"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="550">
    <Grid>
        <Button x:Name="b_login" Content="Login" HorizontalAlignment="Left" Margin="36,148,0,0" VerticalAlignment="Top" Width="75" Click="b_login_Click"/>
        <Label x:Name="l_username" Content="Email or PersNr" HorizontalAlignment="Left" Margin="32,40,0,0" VerticalAlignment="Top" Width="91" FontStyle="Italic" Foreground="#FF919191"/>
        <TextBox x:Name="tb_username" HorizontalAlignment="Left" Height="23" Margin="36,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="l_password" Content="Password" HorizontalAlignment="Left" Margin="32,89,0,0" VerticalAlignment="Top" Width="91" Foreground="#FF919191" FontStyle="Italic"/>
        <PasswordBox x:Name="pb_password" HorizontalAlignment="Left" Height="23" Margin="36,111,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
